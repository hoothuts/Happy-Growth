<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5B86E5"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Materi"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="@id/btnBack" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Top Card Container for Days -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardDays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp" 
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/headerLayout">
        <!-- Negative margin to overlap header slightly if desired, or just standard below -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="6">

            <TextView
                android:id="@+id/tvDay1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="SEN"
                android:gravity="center"
                android:paddingVertical="8dp"
                android:textColor="#333"
                android:textSize="12sp"
                android:background="@drawable/bg_pill_white"
                android:backgroundTint="#F0F0F0"/> <!-- Default inactive -->
            
            <TextView
                android:id="@+id/tvDay2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="SEL"
                android:gravity="center"
                android:paddingVertical="8dp"
                android:textColor="#333"
                android:textSize="12sp"/>

             <TextView
                android:id="@+id/tvDay3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="RAB"
                android:gravity="center"
                android:paddingVertical="8dp"
                android:textColor="#333"
                android:textSize="12sp"/>

             <TextView
                android:id="@+id/tvDay4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="KAM"
                android:gravity="center"
                android:paddingVertical="8dp"
                android:textColor="#333"
                android:textSize="12sp"/>

             <TextView
                android:id="@+id/tvDay5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="JUM"
                android:gravity="center"
                android:paddingVertical="8dp"
                android:textColor="#333"
                android:textSize="12sp"/>

             <TextView
                android:id="@+id/tvDay6"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="SAB"
                android:gravity="center"
                android:paddingVertical="8dp"
                android:textColor="#333"
                android:textSize="12sp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- RecyclerView for Schedule -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSchedule"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="16dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardDays"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
