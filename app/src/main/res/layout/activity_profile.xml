<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_header_gradient"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="@id/btnBack" />

        <TextView
            android:id="@+id/btnDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_pill_white"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:text="DONE"
            android:textColor="@color/blue_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_check" 
            android:drawableTint="@color/blue_primary"
            android:drawablePadding="4dp" 
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/btnBack"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"/>
            <!-- Note: ic_check isn't created but standard check might work or just text. Using text for now if drawable fails or just simple text -->

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Profile Card overlap -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="-60dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <View
                android:id="@+id/imgProfilePlaceholder"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/bg_white_rounded_top"
                android:backgroundTint="#CCCCCC"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
                <!-- Using View as placeholder for grey box -->

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akshay Syal"
                android:textColor="@color/gray_text"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@id/imgProfilePlaceholder"
                app:layout_constraintTop_toTopOf="@id/imgProfilePlaceholder"
                android:layout_marginTop="8dp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_camera"
                app:tint="#666"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvClass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class XI-B | Roll no: 04"
                android:textColor="#888888"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/tvName"
                app:layout_constraintTop_toBottomOf="@id/tvName"
                android:layout_marginTop="4dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Details Form -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardProfile">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <!-- Adhar No -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adhar No"
                        android:textSize="12sp"
                        android:textColor="#888"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1234 4325 4567 1234"
                        android:textColor="@color/gray_text"
                        android:textSize="16sp"
                        android:paddingVertical="8dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"/>
                </LinearLayout>

                <!-- Academic Year -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Academic Year"
                        android:textSize="12sp"
                        android:textColor="#888"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2020-2021"
                        android:textColor="@color/gray_text"
                        android:textSize="16sp"
                        android:paddingVertical="8dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Parent Mail ID -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">
                <TextView
                    android:id="@+id/lblMail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parent Mail ID"
                    android:textSize="12sp"
                    android:textColor="#888"/>
                <TextView
                    android:id="@+id/valMail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="parentboth84@gmail.com"
                    android:textColor="@color/gray_text"
                    android:textSize="16sp"
                    android:paddingVertical="8dp"
                    android:layout_below="@id/lblMail"
                    android:layout_toStartOf="@id/lockMail"/>
                <ImageView
                    android:id="@+id/lockMail"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_lock"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:tint="#AAA"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_below="@id/valMail"/>
            </RelativeLayout>


            <!-- Mother Name -->
             <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">
                <TextView
                    android:id="@+id/lblMother"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mother Name"
                    android:textSize="12sp"
                    android:textColor="#888"/>
                <TextView
                    android:id="@+id/valMother"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Monica Larson"
                    android:textColor="@color/gray_text"
                    android:textSize="16sp"
                    android:paddingVertical="8dp"
                    android:layout_below="@id/lblMother"
                    android:layout_toStartOf="@id/lockMother"/>
                <ImageView
                    android:id="@+id/lockMother"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_lock"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:tint="#AAA"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_below="@id/valMother"/>
            </RelativeLayout>

            <!-- Father Name -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">
                <TextView
                    android:id="@+id/lblFather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Father Name"
                    android:textSize="12sp"
                    android:textColor="#888"/>
                <TextView
                    android:id="@+id/valFather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bernard Taylor"
                    android:textColor="@color/gray_text"
                    android:textSize="16sp"
                    android:paddingVertical="8dp"
                    android:layout_below="@id/lblFather"
                    android:layout_toStartOf="@id/lockFather"/>
                <ImageView
                    android:id="@+id/lockFather"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_lock"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:tint="#AAA"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_below="@id/valFather"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
